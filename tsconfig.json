{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}